# База данных
DATABASE_URL=sqlite+aiosqlite:///./database.db

# Сервер
HOST=0.0.0.0
PORT=8000

# Логирование
LOG_LEVEL=INFO
DEBUG=false

# JWT настройки
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# Ротация ключей (автоматическая)
KEY_ROTATION_INTERVAL_HOURS=24
MAX_PREVIOUS_KEYS=3

# ВАЖНО: SECRET_KEY генерируется автоматически при запуске
# и не может быть изменен через переменные окружения
# Это обеспечивает максимальную безопасность
